<eventParser name="GenericDHCPParser">

  <deviceType>
    <Vendor> Generic </Vendor>
    <Model> Generic </Model>
    <Version> ANY</Version>
  </deviceType>

  <eventFormatRecognizer><![CDATA[dhcpd\[\d+\]:]]></eventFormatRecognizer>

  <testEvents>
    <testEvent><![CDATA[<13>Aug 26 19:28:11 DNS-Pri dhcpd[0]: DHCPREQUEST for 172.16.10.200 (172.16.10.8) from 00:50:56:88:4e:17 (26L2233B1-02)]]></testEvent>
    <testEvent><![CDATA[<30>Apr 20 18:19:07 DNS-Pri 10.0.40.22 dhcpd[13598]: DHCPACK to 10.0.166.5 (e8:9a:8f:2f:a7:4b) via eth2]]></testEvent>
  </testEvents>

  <parsingInstructions>


    <switch>
      <case>
        <collectFieldsByRegex src="$_rawmsg">
          <regex><![CDATA[<:gPatSyslogPRI><_mon:gPatMon>\s+<_day:gPatDay>\s+<_time:gPatTime>\s+<reptDevName:gPatHostName>\s+<reptDevIpAddr:gPatIpAddr>\s+dhcpd\[<procId:gPatInt>\]:\s+<_type:gPatStr>\s+<_body:gPatMesgBody>]]></regex>
        </collectFieldsByRegex>
      </case>
      <case>
        <collectFieldsByRegex src="$_rawmsg">
          <regex><![CDATA[<:gPatSyslogPRI><_mon:gPatMon>\s+<_day:gPatDay>\s+<_time:gPatTime>\s+(?:<reptDevIpAddr:gPatIpAddr>|<reptDevName:gPatHostName>)?\s*dhcpd\[<procId:gPatInt>\]:\s+<_type:gPatStr>\s+<_body:gPatMesgBody>]]></regex>
        </collectFieldsByRegex>
      </case>
    </switch>

    <setEventAttribute attr="eventType">combineMsgId("Generic", "_", $_type)</setEventAttribute>
    <setEventAttribute attr="deviceTime">toDateTime($_mon, $_day, $_time)</setEventAttribute>
    <setEventAttribute attr="eventAction">0</setEventAttribute>

    <choose>
      <when test="$_type = 'DHCPDISCOVER'">
        <!-- <13>Aug 26 19:28:10 DNS-Pri dhcpd: DHCPDISCOVER from 00:50:56:88:4e:17 via eth0 -->
        <!-- <30>Sep 2 09:50:09 2.2.2.2 dhcpd[10821]: DHCPDISCOVER from 00:0b:86:ca:cb:f8 via 1.1.1.1 -->

        <collectAndSetAttrByRegex src="$_body">
          <regex><![CDATA[from\s+<hostMACAddr:gPatStr>\s+via\s+<:gPatStr>]]></regex>
        </collectAndSetAttrByRegex>
      </when>

      <when test="$_type = 'DHCPOFFER'">
        <!-- <13>Aug 26 19:28:11 DNS-Pri dhcpd: DHCPOFFER on 172.16.10.200 to 00:50:56:88:4e:17 (26L2233B1-02) via eth0 -->
        <!-- <30>Sep 2 09:50:09 2.2.2.2 dhcpd[10821]: DHCPOFFER on 2.2.2.2 to 00:0b:86:ca:cb:f8 via eth2 relay 3.3.3.3 lease-duration 47387-->
        <switch>
          <case>
            <collectAndSetAttrByRegex src="$_body">
              <regex><![CDATA[on\s+<hostIpAddr:gPatIpAddr>\s+to\s+<hostMACAddr:gPatStr> \(<hostName:gPatStr>\)(?:\s+via\s+<srcIntfName:gPatStr>)?<:gPatMesgBody>]]></regex>
            </collectAndSetAttrByRegex>
          </case>
          <case>
            <collectAndSetAttrByRegex src="$_body">
              <regex><![CDATA[on\s+<hostIpAddr:gPatIpAddr>\s+to\s+<hostMACAddr:gPatStr>(?:\s+via\s+<srcIntfName:gPatStr>)?(?:.*\s+lease-duration\s+<dhcpLeaseTime:gPatInt>)?]]></regex>
            </collectAndSetAttrByRegex>
          </case>
        </switch>
      </when>

      <when test="$_type = 'DHCPREQUEST'">
        <!-- <13>Aug 26 19:28:11 DNS-Pri dhcpd: DHCPREQUEST for 172.16.10.200 (172.16.10.8) from 00:50:56:88:4e:17 (26L2233B1-02) -->
        <!-- <30>Sep 2 09:50:08 2.2.2.2 dhcpd[20125]: DHCPREQUEST for 2.2.2.2 from 00:16:d4:c5:61:a7 -->
        <switch>
          <case>
            <collectAndSetAttrByRegex src="$_body">
              <regex><![CDATA[for\s+<hostIpAddr:gPatIpAddr>\s+\(<:gPatIpAddr>\)\s+from\s+<hostMACAddr:gPatStr>\s+\(<hostName:gPatStr>\)<:gPatMesgBody>]]></regex>
            </collectAndSetAttrByRegex>
          </case>
          <case>
            <collectAndSetAttrByRegex src="$_body">
              <regex><![CDATA[for\s+<hostIpAddr:gPatIpAddr>\s+from\s+<hostMACAddr:gPatStr>(?:\s+via\s+<srcIntfName:gPatStr>)?]]></regex>
            </collectAndSetAttrByRegex>
          </case>
        </switch>
      </when>

      <when test="$_type = 'DHCPACK'">
        <!-- <13>Aug 26 15:58:01 DNS-Pri dhcpd: DHCPACK on 172.16.10.223 to 00:1e:c9:fe:06:86 (WIN-09PEADE5UAN) via eth0 -->
        <!-- <30>Sep 2 09:50:08 2.2.2.2 dhcpd[20125]: DHCPACK on 2.2.2.2 to 00:16:d4:c5:61:a7 -->
        <!-- <30>Apr 20 18:19:07 DNS-Pri 10.0.40.22 dhcpd[13598]: DHCPACK to 10.0.166.5 (e8:9a:8f:2f:a7:4b) via eth2 -->
        <switch>
          <case>
            <collectAndSetAttrByRegex src="$_body">
              <regex><![CDATA[^on\s+<hostIpAddr:gPatIpAddr>\s+to\s+<hostMACAddr:gPatStr>(?:\s+\(<hostName:gPatStr>\))?(?:\s+via\s+<srcIntfName:gPatStr>)?]]></regex>
            </collectAndSetAttrByRegex>
          </case>
          <case>
            <collectAndSetAttrByRegex src="$_body">
              <regex><![CDATA[^to\s+<hostIpAddr:gPatIpAddr>(?:\s+\(<hostMACAddr:gPatStr>\))?(?:\s+via\s+<srcIntfName:gPatStr>)?]]></regex>
            </collectAndSetAttrByRegex>
          </case>
          <default/>
        </switch>
      </when>

      <when test="$_type = 'DHCPINFORM'">
        <!-- <13>Aug 26 19:33:30 DNS-Pri dhcpd: DHCPINFORM from 172.16.10.200 via eth0: not authoritative for subnet 172.16.10.0 -->
        <!-- <30>Sep 2 09:50:09 2.2.2.2 dhcpd[10821]: DHCPINFORM from 2.2.2.2 via 1.1.1.1-->

        <collectAndSetAttrByRegex src="$_body">
          <regex><![CDATA[from <hostIpAddr:gPatIpAddr><:gPatMesgBody>]]></regex>
        </collectAndSetAttrByRegex>
      </when>

      <when test="$_type = 'DHCPDECLINE'">
        <!-- <13>Aug 26 19:33:30 DNS-Pri dhcpd: DHCPDECLINE of 172.28.41.179 from 00:11:43:42:b7:b2 (AMOOREXP) via 172.28.41.12: not found -->
        <switch>
          <case>
            <collectAndSetAttrByRegex src="$_body">
              <regex><![CDATA[of <hostIpAddr:gPatIpAddr> from <hostMACAddr:gPatStr> \(<hostName:gPatStr>\)<:gPatMesgBody>]]></regex>
            </collectAndSetAttrByRegex>
          </case>
          <case>
            <collectAndSetAttrByRegex src="$_body">
              <regex><![CDATA[of <hostIpAddr:gPatIpAddr> from <hostMACAddr:gPatStr><:gPatMesgBody>]]></regex>
            </collectAndSetAttrByRegex>
          </case>
        </switch>
      </when>

      <when test="$_type = 'DHCPRELEASE'">
        <!-- <13>Aug 26 19:33:30 DNS-Pri dhcpd: DHCPRELEASE of 172.28.41.179 from 00:11:43:42:b7:b2 (AMOOREXP) via 172.28.41.12: not found -->
        <switch>
          <case>
            <collectAndSetAttrByRegex src="$_body">
              <regex><![CDATA[of <hostIpAddr:gPatIpAddr> from <hostMACAddr:gPatStr> \(<hostName:gPatStr>\)<:gPatMesgBody>]]></regex>
            </collectAndSetAttrByRegex>
          </case>
          <case>
            <collectAndSetAttrByRegex src="$_body">
              <regex><![CDATA[of <hostIpAddr:gPatIpAddr> from <hostMACAddr:gPatStr><:gPatMesgBody>]]></regex>
            </collectAndSetAttrByRegex>
          </case>
        </switch>
      </when>

      <when test="$_type = 'Unable'">
        <switch>
          <case>
            <collectFieldsByRegex src="$_body">
              <regex><![CDATA[^to add forward map from <destName:gPatHostName> to <destIpAddr:gPatIpAddr>:\s+<_action:gPatWord>]]></regex>
            </collectFieldsByRegex>
            <setEventAttribute attr="eventType">combineMsgId("Generic_DHCP-", $_action)</setEventAttribute>
          </case>
          <default/>
        </switch>
      </when>

    </choose>

  </parsingInstructions>

</eventParser>

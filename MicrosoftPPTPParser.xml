<eventParser name="MicrosoftPPTPParser">
  <deviceType>
    <Vendor>Microsoft</Vendor>
    <Model>Windows</Model>
    <Version>ANY</Version>
  </deviceType>

  <appType>
    <Vendor>Microsoft</Vendor>
    <Model>PPTP/L2TP VPN</Model>
    <Version>ANY</Version>
    <Name>Microsoft PPTP/L2TP VPN</Name>
  </appType>

  <eventFormatRecognizer><![CDATA[<:gPatSyslogPRI>?<:gPatMon>\s+<:gPatDay>\s+<:gPatTime>\s+<:gPatStr>\s+MSPPTPLog\s+<:gPatInt>\s+<:gPatStrComma>,<:gPatStrComma>,<:gPatStrComma>,<:gPatStrComma>,RAS,]]></eventFormatRecognizer>

  <testEvents>
